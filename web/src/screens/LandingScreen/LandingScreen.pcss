    &-content {
      justify-content: center;
      margin-top: 0 !important;
    }

    &__wrap {
      display: flex;
      flex-direction: row;

      &__image {
        align-items: center;
        align-items: flex-start;
        background-image: url(assets/images/landing/DevicePreview.png);
        background-position: bottom;
        background-repeat: no-repeat;
        background-size: contain;
        display: flex;
        flex-direction: column;
        height: 100%;
       // height: 489px;
        justify-content: flex-start;
        margin-right: 80px;
        //max-width: 661px;
        width: 100%;
      }

      &__content {
        align-items: flex-start;
        display: flex;
        flex-direction: column;
        height: max-content;
        justify-content: flex-start;
        margin: 93px 58px 112px 0;
        max-width: 464px;
        width: 100%;

        h1,
        h2 {
          text-align: left;
        }

        h1 {
          margin-bottom: 36px;
        }

        .landing-button {
          margin-top: 36px;
        }
      }
    }
  }
