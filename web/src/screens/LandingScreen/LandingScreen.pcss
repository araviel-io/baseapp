    &__wrap {
      align-items: center;
      display: flex;
      flex-direction: column;
      justify-content: flex-end;
      margin-top: 90px;

      &__title {
        align-items: center;
        display: flex;
        flex-direction: column;
        justify-content: center;
        margin-top: 60px;

        .landing-button {
          margin: 60px 0;
        }
      }

      .pg-ticker-table {
        margin-bottom: 70px;
        -webkit-box-shadow: 0px 3px 13px -2px var(--shadow-color-level-1);
        box-shadow: 0px 3px 13px -2px var(--shadow-color-level-1);
        border-radius: 12px;

        &__icon {
          width:24px;
          margin-right:6px;
        }
      }
    }
  }

  &__platform-info {
    background: var(--primary-cta-color);
    display: flex;
    height: 150px;

    &__wrap {
      align-items: center;
      display: flex;
      flex: 1;
      flex-direction: row;
      justify-content: center;

      &__item {
        display: flex;
        flex-direction: column;
        justify-content: center;
        margin: 0 50px;

        span {
          color: var(--primary-text-color);
          font-style: normal;
          text-align: center;

          &:first-child {
            font-size: 60px;
            font-weight: 500;
            line-height: 72px;
            margin-bottom: 8px;
          }

          &:last-child {
            font-size: 16px;
            font-weight: normal;
            letter-spacing: 0.25px;
            line-height: 28px;
            opacity: 0.5;
          }
        }
      }
    }
  }

  &__register {
    background-image: url(assets/images/landing/TradingUIFullBG.png);
    background-position: right center;
    background-repeat: no-repeat;
    background-size: 30%;

    &-content {
      justify-content: center;
      margin-top: 0 !important;
    }

    &__item {
      align-items: flex-start;
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
      max-width: 464px;

      h1,
      h2 {
        text-align: left;
      }

      h1 {
       /* margin-bottom: 36px;*/
      }

      h2 {
        margin-bottom: 36px;
      }
    }
  }

  &__features {
   /* background: var(--landing-background-color);*/
   background: rgb(0,151,205);
   background: linear-gradient(0deg, rgba(0,151,205,1) 0%, rgba(0,115,158,1) 100%);
    h1 {
      color: var(--custom-safe);
      font-size: xx-large;
      font-style: normal;
      font-weight: 900;
      letter-spacing: -0.02em;
      margin-bottom: 25px;
      text-align:left;
    }

    &__content {
      align-items: flex-start;
      display: flex;
      flex-direction: column;
      height: max-content;
      justify-content: flex-start;
      width: 100%;

      &__row {
        align-items: flex-start;
        display: flex;
        flex-direction: row;
        height: max-content;
        justify-content: space-between;
        width: 100%;

        &__item {
          align-items: flex-start;
          background: var(--landing-background-color);
          border: 1px solid var(--light-item-border);
          border-radius: 4px;
          display: flex;
          flex-direction: column;
          height: 298px;
          justify-content: flex-start;
          margin: 13px 10px;
          padding: 50px 38px;
          width: 100%;

          img {
            margin-bottom: 25px;
          }

          h2 {
            color: var(--primary-text-color);
            font-size: 18px;
            font-style: normal;
            font-weight: 500;
            letter-spacing: 0.44px;
            line-height: 24px;
            margin-bottom: 19px;
          }

          span {
            color: var(--primary-text-color);
            font-size: 16px;
            letter-spacing: 0.25px;
            line-height: 28px;
          }
        }
      }
    }
  }

