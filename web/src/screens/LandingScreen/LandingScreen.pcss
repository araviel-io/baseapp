    &__wrap {
      align-items: center;
      display: flex;
      flex-direction: column;
      justify-content: flex-end;
      margin-top: 90px;

      &__title {
        align-items: center;
        display: flex;
        flex-direction: column;
        justify-content: center;
        margin-top: 60px;

        .landing-button {
          margin: 60px 0;
        }
      }

      .pg-ticker-table {
        margin-bottom: 70px;
        -webkit-box-shadow: 0px 3px 13px -2px var(--shadow-color-level-1);
        box-shadow: 0px 3px 13px -2px var(--shadow-color-level-1);
        border-radius: 12px;

        &__icon {
          width:24px;
          margin-right:6px;
        }
      }
    }
  }

  &__platform-info {
    background: var(--primary-cta-color);
    display: flex;
    height: 150px;

    &__wrap {
      align-items: center;
      display: flex;
      flex: 1;
      flex-direction: row;
      justify-content: center;

      &__item {
        display: flex;
        flex-direction: column;
        justify-content: center;
        margin: 0 50px;

        span {
          color: var(--primary-text-color);
          font-style: normal;
          text-align: center;

          &:first-child {
            font-size: 60px;
            font-weight: 500;
            line-height: 72px;
            margin-bottom: 8px;
          }

          &:last-child {
            font-size: 16px;
            font-weight: normal;
            letter-spacing: 0.25px;
            line-height: 28px;
            opacity: 0.5;
          }
        }
      }
    }
  }

  &__register {
    background-image: url(assets/images/landing/TradingUIFullBG.png);
    background-position: right center;
    background-repeat: no-repeat;
    background-size: 30%;

    &-content {
      justify-content: center;
      margin-top: 0 !important;
    }

    &__item {
      align-items: flex-start;
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
      max-width: 464px;

      h1,
      h2 {
        text-align: left;
      }

      h1 {
       /* margin-bottom: 36px;*/
      }

      h2 {
        margin-bottom: 36px;
      }
    }
  }

